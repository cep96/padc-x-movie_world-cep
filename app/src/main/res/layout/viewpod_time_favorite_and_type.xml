<?xml version="1.0" encoding="utf-8"?>
<com.cep.moviesworld.views.viewpods.TimeFavoriteAndMovieTypeViewPod xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/ivFavorite"
        android:layout_width="@dimen/margin_large"
        android:layout_height="@dimen/margin_large"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="@dimen/margin_medium"
        android:layout_marginBottom="@dimen/margin_medium"
        android:src="@drawable/ic_baseline_favorite_border_24"
        android:tint="@android:color/white" />

    <ImageView
        android:id="@+id/ivTime"
        android:layout_width="@dimen/margin_large"
        android:layout_height="@dimen/margin_large"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/margin_medium"
        android:layout_marginEnd="@dimen/margin_medium"
        android:src="@drawable/icons8_clock_26" />

    <TextView
        android:id="@+id/tvDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2hr 13 min"
        android:layout_toEndOf="@id/ivTime"
        android:layout_centerVertical="true"
        style="@style/WhiteText"
        android:textSize="@dimen/text_regular"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvMovieType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/tvDuration"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="horizontal"
        android:layout_toStartOf="@id/ivFavorite"
        android:layout_marginStart="@dimen/margin_medium"
        android:layout_marginEnd="@dimen/margin_medium"
        android:layout_centerVertical="true"/>

</com.cep.moviesworld.views.viewpods.TimeFavoriteAndMovieTypeViewPod>