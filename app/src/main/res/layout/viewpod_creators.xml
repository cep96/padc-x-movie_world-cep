<?xml version="1.0" encoding="utf-8"?>
<com.cep.moviesworld.views.viewpods.CreatorsViewPod xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/location_background">

    <TextView
        android:id="@+id/tvCreatorTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_lbl_creator"
        style="@style/GrayText"
        android:layout_marginTop="@dimen/margin_medium_2"
        android:layout_marginStart="@dimen/margin_medium_2"/>

    <TextView
        android:id="@+id/tvMoreCreators"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:text="@string/txt_lbl_more_creator"
        style="@style/WhiteText"
        android:layout_marginEnd="@dimen/margin_medium_2"
        android:layout_marginTop="@dimen/margin_medium_2"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvCreators"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/item_person"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="horizontal"
        android:layout_below="@id/tvCreatorTxt"
        android:layout_margin="@dimen/margin_medium"/>

</com.cep.moviesworld.views.viewpods.CreatorsViewPod>